@model mymusic_app.Controllers.UserDashboardViewModel
@using System.Linq

@{
    ViewData["Title"] = "My Dashboard";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    body {
        background: linear-gradient(135deg, #f5f0ff 0%, #e0e7ff 100%);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        display: flex; /* Use flex for sidebar + content layout */
    }

    /* --- SIDEBAR STYLES --- */
    .sidebar {
        width: 280px;
        background: white;
        height: 100vh;
        position: fixed;
        left: 0;
        top: 0;
        padding: 40px 24px;
        display: flex;
        flex-direction: column;
        box-shadow: 4px 0 15px rgba(0, 0, 0, 0.03);
        z-index: 100;
    }

    .profile-section {
        text-align: center;
        margin-bottom: 30px;
    }

    .sidebar-music-icon {
        background-color: #fce4ec;
        color: #7c4dff;
        width: 50px;
        height: 50px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 15px;
        font-size: 20px;
    }

    .sidebar-nav {
        flex-grow: 1;
    }

    .nav-link-custom {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 15px;
        color: #666;
        text-decoration: none;
        border-radius: 12px;
        transition: all 0.2s;
        margin-bottom: 5px;
        font-weight: 500;
    }

        .nav-link-custom:hover {
            background-color: #f0f3ff;
            color: #7c4dff;
        }

    .sidebar-stats {
        background: #f8faff;
        border-radius: 16px;
        padding: 15px;
        margin-bottom: 20px;
    }

    .stat-item {
        display: flex;
        justify-content: space-between;
        font-size: 0.85rem;
        margin-bottom: 5px;
    }

    /* --- MAIN CONTENT AREA --- */
    .main-content {
        margin-left: 280px; /* Same as sidebar width */
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: flex-start;
        padding: 40px 20px;
    }

    .glass-card {
        background: white;
        border-radius: 24px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
        padding: 40px;
        width: 100%;
        max-width: 700px;
    }

    /* --- SONG ROW STYLES --- */
    .section-title {
        color: #1a1a1a;
        font-weight: 700;
        font-size: 1.1rem;
        margin-top: 25px;
        margin-bottom: 15px;
    }

    .song-row {
        display: flex;
        align-items: center;
        gap: 12px;
        background-color: #eff4ff;
        border-radius: 12px;
        padding: 10px 12px;
        margin-bottom: 8px;
    }

    .album-art {
        width: 42px;
        height: 42px;
        border-radius: 10px;
        overflow: hidden;
        background: #c2c9ff;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

        .album-art img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .song-info {
        flex: 1;
        overflow: hidden;
    }

    .song-title {
        font-weight: 600;
        font-size: 0.9rem;
        margin: 0;
        color: #333;
    }

    .song-meta {
        font-size: 0.75rem;
        color: #666;
    }

    .badge {
        background: #e0e7ff;
        color: #5a67d8;
        padding: 2px 8px;
        border-radius: 20px;
        font-size: 0.75rem;
    }

    .logout-btn-container {
        border-top: 1px solid #eee;
        padding-top: 20px;
    }

    .logout-btn {
        width: 100%;
        background: none;
        border: none;
        color: #fb7185;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 10px;
        border-radius: 10px;
        transition: background 0.2s;
    }

        .logout-btn:hover {
            background: #fff1f2;
        }
</style>

<aside class="sidebar">
    <div class="sidebar-music-icon">🎵</div>

    <div class="profile-section">
        <h4 class="fw-bold mb-1">@Model.User.FirstName @Model.User.LastName</h4>
        <p class="text-muted small">@(!string.IsNullOrEmpty(Model.User.Bio) ? Model.User.Bio : "No bio yet.")</p>
    </div>

    <nav class="sidebar-nav">
        <a href="/Account/Edit" class="nav-link-custom"><i class="bi bi-person-gear"></i> Edit Profile</a>

        <!-- Logout at the bottom -->
        <div style="margin-top: auto; padding-top: 20px; border-top: 1px solid rgba(0,0,0,0.05);">
            <!-- POST logout form pointing to AuthController.Logout -->
            <form method="post" action="/Auth/Logout">
                @Html.AntiForgeryToken()
                <button type="submit" style="
                width: 100%;
                text-align: left;
                display: flex;
                align-items: center;
                padding: 12px 18px;
                border: none;
                background: none;
                color: #fb7185;
                font-weight: 700;
                font-size: 0.9rem;
                cursor: pointer;
            ">
                    <i class="bi bi-box-arrow-left" style="margin-right:15px;font-size:1.1rem;"></i>
                    <span>Logout</span>
                </button>
            </form>
        </div>
    </nav>

    <div class="sidebar-stats">
        <div class="stat-item">
            <span class="text-muted">Followers</span>
            <strong>@Model.FollowersCount</strong>
        </div>
        <div class="stat-item">
            <span class="text-muted">Following</span>
            <strong>@Model.FollowingCount</strong>
        </div>
    </div>

    <div class="logout-btn-container">
        <form method="post" action="/Auth/Logout">
            @Html.AntiForgeryToken()
            <button type="submit" class="logout-btn">
                <i class="bi bi-box-arrow-left"></i> Logout
            </button>
        </form>
    </div>
</aside>

<main class="main-content">
    <div class="glass-card">
        <h3 class="section-title">Liked Songs <span class="badge">@Model.LikedSongs.Count</span></h3>
        @if (Model.LikedSongs?.Any() == true)
        {
            @foreach (var song in Model.LikedSongs.Take(5))
            {
                <div class="song-row">
                    <div class="album-art">
                        @if (!string.IsNullOrWhiteSpace(song.Album?.CoverImageUrl))
                        {
                            <img src="@Url.Content(song.Album.CoverImageUrl)" alt="cover" onerror="this.style.display='none'; this.parentElement.innerHTML='<i class=&quot;bi bi-music-note text-white&quot;></i>';" />
                        }
                        else
                        {
                            <i class="bi bi-music-note text-white"></i>
                        }
                    </div>
                    <div class="song-info">
                        <p class="song-title">@song.Title</p>
                        <p class="song-meta">@(song.Artist?.Name ?? "Unknown Artist") · @song.Album?.Title</p>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-muted small">You haven't liked any songs yet.</p>
        }

        <h3 class="section-title">Recently Played</h3>
        @if (Model.RecentlyPlayed?.Any() == true)
        {
            @foreach (var song in Model.RecentlyPlayed.Take(5))
            {
                <div class="song-row">
                    <div class="album-art">
                        @if (!string.IsNullOrWhiteSpace(song.Album?.CoverImageUrl))
                        {
                            <img src="@Url.Content(song.Album.CoverImageUrl)" alt="cover" onerror="this.style.display='none';" />
                        }
                        else
                        {
                            <i class="bi bi-music-note text-white"></i>
                        }
                    </div>
                    <div class="song-info">
                        <p class="song-title">@song.Title</p>
                        <p class="song-meta">@(song.Artist?.Name ?? "Unknown Artist")</p>
                    </div>
                </div>

            }
        }
    </div>

</main>